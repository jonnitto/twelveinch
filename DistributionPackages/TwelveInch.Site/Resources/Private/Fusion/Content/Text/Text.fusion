prototype(TwelveInch.Site:Content.Text) < prototype(Neos.Neos:ContentComponent) {
    text = Neos.Neos:Editable {
        property = 'text'
    }

    textPadding = ${q(node).property('textPadding') ? 'twelveinch-text container text-padding' : 'twelveinch-text container'}

    renderer = afx`
        <div class={props.textPadding}>{props.text}</div>
    `
}
